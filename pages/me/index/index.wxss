/*me_index*/
.pad{padding:10rpx 10rpx;}
.me_index{background: #f2f2f2;height:100%;position: relative;width:100%;font-size: 28rpx;font-family: "微软雅黑";width:100%;}
.me_index .box{height:280rpx;}
.me_index .box image{width:100%;height:280rpx;}
.me_index .userImg{position: absolute;top:165rpx;left:38%;text-align: center; }
.me_index .userImg image{width:180rpx;height:180rpx;border-radius: 50%;border:4rpx solid #fff;box-shadow:0px 0px 3px 1px #ddd;}
.me_index .userImg image view{font-weight: blod;}
.me_index .order{height:36rpx;margin-top:150rpx;}
.me_index .order .myOrder{position: relative;background: #fff;}
.me_index .order .myOrder .all{display: inline-block;width:100%;box-sizing:border-box;margin: auto;padding:28rpx 65rpx;border-bottom:1px solid #f2f2f2;
}/***/
.me_index .order .myOrder .all text.rt{position: absolute;right:57rpx;color:#cccccc;}
.me_index .order .orderList{margin-top:20rpx;padding:30rpx 58rpx;background: #fff;}/***/
.me_index .order .orderList .pubOrder{display: inline-block;width:24.4%;text-align: center;}
.me_index .order .orderList .pubOrder image{width:50rpx;height:44rpx;}
.me_index .order .orderList .pubOrder text{display: block;}
.me_index .score{background: #fff;margin-top:60rpx;}/***/
.me_index .score .nav{position: relative;display:inline-block;width:100%;box-sizing:border-box;margin: auto;padding:28rpx 20rpx;}/***/
.me_index .score .nav text.myScore{padding:28rpx 0rpx;}
.me_index .score .nav:first-child{border-bottom:1px solid #f2f2f2;padding:28rpx 65rpx;}
.me_index .score .nav text.ft{position: absolute;right:57rpx;color:#cccccc;}
.me_index .phone{background: #fff;margin-top:20rpx;height:80rpx;line-height: 80rpx;margin-bottom:147rpx;position: relative;}
.me_index .phone text{padding:0rpx 62rpx;}/***/
.me_index .phone text.ft{position: absolute;right:-2rpx;color:#cccccc;}
